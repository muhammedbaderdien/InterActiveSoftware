@model IEnumerable<InteractiveSoftware.Assessment.API.Domain.Models.Company>

@{
    ViewData["Title"] = "Companies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Companies</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Add</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RegistrationNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CompanyAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CompanyContact)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegistrationNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyAddress.Line1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyContact.LastName)
            </td>
		  <td>
		      <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
		      <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">View</a>
		      <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
		  </td>
        </tr>
}
    </tbody>
</table>
